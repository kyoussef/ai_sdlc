@{
    ViewData["Title"] = "Tasks";
}

<div class="container mt-4" id="tasks-page">
    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
        <h2 class="m-0">Tasks</h2>
        <div class="d-flex align-items-center gap-2 ms-auto">
            <input id="search" class="form-control" type="search" placeholder="Search tasks..." aria-label="Search tasks" style="min-width:260px" />
            <div class="dropdown" id="priorityMulti">
                <button id="priorityDropdown" class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Priority
                </button>
                <div class="dropdown-menu p-2" id="priorityMenu" aria-labelledby="priorityDropdown" style="min-width:220px;">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="High" id="prioHigh">
                        <label class="form-check-label" for="prioHigh">High</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Med" id="prioMed">
                        <label class="form-check-label" for="prioMed">Med</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Low" id="prioLow">
                        <label class="form-check-label" for="prioLow">Low</label>
                    </div>
                </div>
            </div>
            <div class="dropdown" id="tagsMulti">
                <button id="tagsDropdown" class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Tags
                </button>
                <div class="dropdown-menu p-2" id="tagsMenu" aria-labelledby="tagsDropdown" style="min-width:240px; max-height:300px; overflow:auto;"></div>
            </div>
            <button id="import-btn" class="btn btn-outline-primary" type="button">Import CSV</button>
            <input id="importFile" class="d-none" type="file" accept=".csv" />
            <select id="sortBy" class="form-select" aria-label="Sort by" style="min-width:160px">
                <option value="createdAt" selected>Created</option>
                <option value="dueDate">Due Date</option>
                <option value="priority">Priority</option>
            </select>
            <select id="sortOrder" class="form-select" aria-label="Sort order" style="min-width:120px">
                <option value="desc" selected>Desc</option>
                <option value="asc">Asc</option>
            </select>
            <button id="clear-search" class="btn btn-outline-secondary" type="button">Clear</button>
            <button id="add-task-btn" class="btn btn-primary" type="button" aria-controls="taskModal" aria-expanded="false">
                Add
            </button>
        </div>
    </div>

    <div id="error-banner" class="alert alert-danger d-none" role="alert" aria-live="assertive"></div>

    <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="taskModalLabel">Add Task</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            @await Html.PartialAsync("~/Views/Tasks/_CreateTaskForm.cshtml")
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmModalLabel">Delete Task</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p id="confirmMessage">Are you sure you want to delete this task?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" id="confirmDeleteBtn" class="btn btn-danger">Delete</button>
          </div>
        </div>
      </div>
    </div>

    <div id="task-list-container" aria-live="polite">
        @await Html.PartialAsync("~/Views/Tasks/_TaskList.cshtml")
    </div>

    <nav class="mt-3" aria-label="Tasks pagination">
        <ul class="pagination m-0">
            <li class="page-item">
                <button id="pager-prev" class="page-link" type="button" aria-label="Previous">Prev</button>
            </li>
            <li class="page-item disabled">
                <span id="pager-label" class="page-link" aria-live="polite">Page 1 of 1</span>
            </li>
            <li class="page-item">
                <button id="pager-next" class="page-link" type="button" aria-label="Next">Next</button>
            </li>
        </ul>
    </nav>
</div>

<script src="/js/todo.js"></script>





