<form id="create-task-form" novalidate>
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" name="title" class="form-control" maxlength="200" required />
        <div id="title-error" class="invalid-feedback"></div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description (optional)</label>
        <textarea id="description" name="description" class="form-control" rows="3" maxlength="1000" placeholder="Add more details..."></textarea>
    </div>
    <div class="mb-3">
        <label for="dueDate" class="form-label">Due Date</label>
        <input id="dueDate" name="dueDate" type="date" class="form-control" required />
        <div id="dueDate-error" class="invalid-feedback"></div>
    </div>
    <div class="mb-3">
        <label for="priority" class="form-label">Priority</label>
        <select id="priority" name="priority" class="form-select">
            <option value="0">Low</option>
            <option value="1" selected>Med</option>
            <option value="2">High</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="tags" class="form-label">Tags (optional, comma-separated)</label>
        <input id="tags" name="tags" class="form-control" placeholder="home, work" />
        <div id="tags-hint" class="form-text">Up to 10 tags.</div>
    </div>
    <div class="d-flex gap-2">
        <button id="save-task-btn" type="submit" class="btn btn-success">Save</button>
        <button id="cancel-task-btn" type="button" class="btn btn-secondary">Cancel</button>
    </div>
</form>
